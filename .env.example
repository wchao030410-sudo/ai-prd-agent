# 智谱AI API密钥
# 获取地址: https://open.bigmodel.cn/usercenter/apikeys
ZHIPU_API_KEY=your_zhipu_api_key_here

# 数据库连接字符串
# 开发环境（SQLite）:
DATABASE_URL=file:./dev.db

# 生产环境（Vercel Postgres 或其他托管数据库）:
# DATABASE_URL=postgresql://user:password@host:port/database

# Next.js配置
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Admin Dashboard Password
# 生成哈希: node -e "console.log(require('bcrypt').hashSync('your-password', 10))"
ADMIN_PASSWORD_HASH=your_bcrypt_hash_here

# Admin JWT Secret (至少32位的随机字符串)
# 生成方法: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
ADMIN_JWT_SECRET=your_random_secret_at_least_32_characters_long
